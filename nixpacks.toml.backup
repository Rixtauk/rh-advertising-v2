[phases.setup]
nixPkgs = ["python311", "python311Packages.pip"]

[phases.install]
cmds = [
  "cd api && python -m pip install --upgrade pip && python -m pip install -e ."
]

[phases.build]
cmds = [
  "echo 'Build phase - checking directories:'",
  "pwd",
  "ls -la",
  "echo 'Copying data directory to /app/data:'",
  "cp -r data /app/data && echo 'Successfully copied data to /app/data' || echo 'ERROR: Failed to copy data directory'",
  "ls -la /app/data && echo 'Verified /app/data exists' || echo 'ERROR: /app/data does not exist'"
]

[start]
cmd = "cd api && python -m uvicorn app.main:app --host 0.0.0.0 --port $PORT"
